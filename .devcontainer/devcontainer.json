{
  "name": "SPFx Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:16.18.1",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "16.18.1"
    }
  },
  "postCreateCommand": "npm install -g yo@4.3.1 gulp@2.3.0 @microsoft/generator-sharepoint@1.17.2 && .devcontainer/scripts/clone-repo.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
